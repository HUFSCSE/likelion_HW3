
<div class="container">
    <h1 style="padding-left: 15px;">Update View</h1>
    <form action="/update/<%= @one_post.id %>" method ="POST" class="navbar-form navbar-left" role="search">
      <div class="form-group">
        <input name="email" type="email" value="<%= @one_post.email %>" class="form-control" placeholder="e-mail"><br>
         <textarea name="title" class="form-control" rows="4" style="padding-right: 26px;" placeholder="title"><%= @one_post.title %></textarea><br>
       <textarea name="text" class="form-control" rows="4" style="padding-right: 26px;" placeholder="text"><%= @one_post.text %></textarea>
      </div>
      <br>
      <button type="submit" class="btn btn-default" style="padding-left: 143px;border-left-width: 59.909;">Submit</button>
    </form>
</div>